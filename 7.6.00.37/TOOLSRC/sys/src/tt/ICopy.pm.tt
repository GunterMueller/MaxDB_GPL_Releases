sub ModifyVmakePath {
	my @in = split (',', $ENV{'VMAKE_PATH'});
	my @out = ();
	my $hostname = hostname ();
	foreach (@in) {
		if ($_ =~ /^$hostname:(.*)/) {
			push @out, $1;
		} else {
			push @out, $_;
		}
	}
	$ENV{'VMAKE_PATH'} = join (',', @out);
}

ModifyVmakePath () unless ($^O =~ /MsWin/i);

&if $OSSPEC = WIN32
sub get_real_name
{
	local( $path ) = @_;
	my $file;
	@allFiles=();

	if ($path =~ /^(.*)\/([^\/]*)$/)
	{
		$path=$1;
		$file=$2;
		opendir TESTDIR, $path or die "Can't open directory $path: $!\n";
		@allFiles = grep /^$file$/i , readdir TESTDIR;
		closedir TESTDIR;

	}
	return $allFiles[0];
}
&endif
