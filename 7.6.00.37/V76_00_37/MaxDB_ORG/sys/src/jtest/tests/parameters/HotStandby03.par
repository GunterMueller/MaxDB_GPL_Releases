# the database name
DatabaseName=HS75D

# the name of storage library
HS_STORAGE_DLL=libhsscopy

# the official node name
OfficialNode=HOT

# the user for remote access on the database nodes
# default: remuser,Remuser
RemoteUser=remuser,Remuser

# the kernel speed of the database
# default: FAST
KernelSpeed=FAST

# which node is the master; specify hostname and instroot
MasterNode=hs0030
MasterRoot=/SAP_DB/7500DEV/db

# how many standby nodes exists
CounterOfStandbyNodes=1

# specify the hostname and the instroot of each standby node
NODE_0=hs0102
ROOT_0=/SAP_DB/7500DEV/db

# how many logvolume exists
CounterOfLogVolume=2

# define each logvolume by name, type and size
#LOG_NAME_0=/rel/HotStandby/HP/LOG01D
LOG_NAME_0=LOG01D
LOG_TYPE_0=F
LOG_SIZE_0=4000
#LOG_NAME_1=/rel/HotStandby/HP/LOG02D
LOG_NAME_1=LOG02D
LOG_TYPE_1=F
LOG_SIZE_1=5000

# the same for data volume; first how many; after that define the name, type and size
CounterOfDataVolume=2
DATA_NAME_0=DAT01D
DATA_TYPE_0=F
DATA_SIZE_0=4000
DATA_NAME_1=DAT02D
DATA_TYPE_1=F
DATA_SIZE_1=6000
