CREATE VIEW FILM.HOTEL_FILM (VORNAME, NAME, LAND, FILM, HOTEL)AS SELECT CUSTOMER.CUSTOMER_FIRSTNAME, CUSTOMER.CUSTOMER_NAME, COUNTRY.COUNTRY_NAME, MOVIE.MOVIE_TITLE, HOTEL.NAMEFROM PUCK.CUSTOMER, BIBLIOTHEK.COUNTRY, PUCK.RENTAL, PUCK.TAPE, PUCK.MOVIE, HOTEL.RESERVATION, HOTEL.HOTELWHERE (CUSTOMER.CUSTOMER_COUNTRY=4) AND (CUSTOMER.CUSTOMER_ID=RENTAL.CUSTOMER_ID) AND (RENTAL.TAPE_ID=TAPE.TAPE_ID) AND (TAPE.MOVIE_ID=MOVIE.MOVIE_ID) AND (CUSTOMER.CUSTOMER_ID=RESERVATION.CNO) AND (RESERVATION.HNO=HOTEL.HNO) AND (CUSTOMER.CUSTOMER_COUNTRY=COUNTRY.COUNTRY_ID)
