CREATE TABLE "T21TABLE"
(
	"TID"  Integer  NOT NULL,
	"TNAME"  Char (30) ASCII,
	PRIMARY KEY ("TID")
)
//
CREATE TRIGGER T21TRIGGER FOR T21SCHEMA.T21TABLE
AFTER DELETE EXECUTE
(  INSERT INTO T21SCHEMA.T21SAVETABLE 
  SET SID=:OLD.TID, SNAME=:OLD. TNAME, SUSER=USER, SDATUM=DATE;
)
