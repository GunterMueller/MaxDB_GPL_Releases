<data-sources>
	

	<application-name>
		sap.com/MaxDB~WebDAV
	</application-name>
	
	<data-source>
	
		<data-source-name>
			jdbc/WebDAVDB
		</data-source-name>
		
		<alias>
			WebDAVDB
		</alias>
		
		<driver-name>
			maxdbJDBC
		</driver-name>
		
		<init-connections>
			5
		</init-connections>
		
		<max-connections>
			20
		</max-connections>
		
		<max-time-to-wait-connection>
			10
		</max-time-to-wait-connection>
		
		<sql-engine>
			Native_SQL
		</sql-engine>
		
		<jdbc-1.x>
		
			<driver-class-name>
				com.sap.dbtech.jdbc.DriverSapDB
			</driver-class-name>
			
			<url>
				jdbc:sapdb://your_host/your_db
			</url>
			
			<user-name>
				Your DBAUser
			</user-name>
			
			<password encrypted='false'>
				Your DBAPassword
			</password>
			
			<properties>
			
				<property>
					
					<property-name>
						timeout
					</property-name>
					
					<property-value>
						0
					</property-value>
					
				</property>
				
				<property>
					
					<property-name>
						autocommit
					</property-name>
					
					<property-value>
						off
					</property-value>
					
				</property>
				
			</properties>
			
		
		</jdbc-1.x>
	
	</data-source>
	
</data-sources>